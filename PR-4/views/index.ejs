<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Book Store</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
body{
    background: linear-gradient(135deg,#eef2ff,#f8fafc);
    font-family: 'Segoe UI',sans-serif;
}

/* main container */
.container-box{
    max-width:1000px;
    margin:40px auto;
}

/* cards */
.card-ui{
    background:#fff;
    border-radius:18px;
    padding:25px;
    box-shadow:0 12px 35px rgba(0,0,0,.08);
}

/* heading */
.title{
    font-weight:600;
    margin-bottom:20px;
}

/* form grid */
.form-grid{
    display:grid;
    grid-template-columns:1fr 1fr;
    gap:18px;
}

.form-grid .full{
    grid-column:1/3;
}

/* inputs */
.form-control{
    border-radius:10px;
    padding:10px;
}

.form-control:focus{
    border-color:#4f46e5;
    box-shadow:0 0 0 3px rgba(79,70,229,.15);
}

/* button */
.btn-submit{
    background:#4f46e5;
    color:white;
    font-weight:600;
    border:none;
    border-radius:10px;
    padding:10px;
}
.btn-submit:hover{
    background:#4338ca;
}

/* spacing between form & result */
.result-box{
    margin-top:40px;
}

/* table */
.table thead{
    background:#4f46e5;
    color:white;
}

.table tbody tr:hover{
    background:#eef2ff;
}

/* image */
.book-img{
    width:80px;
    border-radius:8px;
    object-fit:cover;
}

/* action buttons */
.edit-btn{
    background:#0ea5e9;
    color:white;
    padding:5px 12px;
    border-radius:6px;
    text-decoration:none;
}
.delete-btn{
    background:#ef4444;
    color:white;
    padding:5px 12px;
    border-radius:6px;
    text-decoration:none;
}
</style>
</head>

<body>

<div class="container-box">

    <!-- ADD BOOK FORM -->
    <div class="card-ui">
        <h3 class="title text-center">ðŸ“š Add Book</h3>

        <form action="/add-book" method="post" enctype="multipart/form-data">
            <div class="form-grid">

                <div>
                    <label>Title</label>
                    <input type="text" name="title" class="form-control" required>
                </div>

                <div>
                    <label>Category</label>
                    <input type="text" name="category" class="form-control" required>
                </div>

                <div>
                    <label>Pages</label>
                    <input type="number" name="pages" class="form-control" required>
                </div>

                <div>
                    <label>Price</label>
                    <input type="number" name="price" class="form-control" required>
                </div>

                <div class="full">
                    <label>Book Image</label>
                    <input type="file" name="bookImg" class="form-control" required>
                </div>

                <div class="full">
                    <button class="btn-submit w-100">Add Book</button>
                </div>

            </div>
        </form>
    </div>


    <!-- BOOK LIST -->
    <div class="result-box card-ui">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="m-0">All Books</h4>
            <input class="form-control w-25" type="search" placeholder="Search">
        </div>

        <table class="table table-bordered align-middle text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Pages</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>

            <tbody>
                <% books.forEach((book, i)=>{ %>
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= book.title %></td>
                    <td><%= book.category %></td>
                    <td><%= book.pages %></td>
                    <td>â‚¹ <%= book.price %></td>
                    <td><img src="<%= book.bookImg %>" class="book-img"></td>

                    <td>
                        <a href="/edit-book/<%= book._id%>" class="edit-btn">Edit</a>
                    </td>
                    <td>
                        <a href="/delete-book/<%= book._id%>" class="delete-btn">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

    </div>

</div>

</body>
</html>
